<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DASH BERLIN - A State of trance - Au5 - Armin - Yekaterinburg"
            android:id="@+id/item_trackTitle"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/settings_default_tags"
            android:id="@+id/item_tags"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:singleLine="true"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1:15:23"
        android:id="@+id/item_trackDuration"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_trackStar"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:src="@android:drawable/btn_star_big_off"/>

</LinearLayout>